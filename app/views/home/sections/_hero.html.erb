<section id="hero" class="relative h-screen flex items-center justify-center overflow-hidden" data-controller="hero">
  <canvas data-hero-target="canvas" class="absolute inset-0 w-full h-full"></canvas>

  <div class="relative z-10 text-center px-6">
    <div data-hero-target="avatar" class="mb-8">
      <div class="avatar-glow inline-block rounded-full p-1">
        <picture>
          <source srcset="<%= asset_path 'image0.webp' %>" type="image/webp">
          <source srcset="<%= asset_path 'image0.jpeg' %>" type="image/jpeg">
          <%= image_tag "image0.webp",
              class: "w-32 h-32 md:w-40 md:h-40 rounded-full object-cover grayscale hover:grayscale-0 transition-all duration-500",
              alt: "Grégory Lefebvre - Développeur Full-Stack Ruby on Rails",
              loading: "eager",
              fetchpriority: "high" %>
        </picture>
      </div>
    </div>

    <h1 data-hero-target="title" class="text-5xl md:text-6xl font-bold text-white mb-4 tracking-tight">
      Grégory Lefebvre<span class="text-neon-500">.</span>
    </h1>

    <p data-hero-target="subtitle" class="text-lg md:text-xl text-gray-400 mb-8 font-light">
      <span class="text-neon-400">Développeur Full-Stack Ruby on Rails</span> &bull; Consultant cybersécurité &bull; Strasbourg
    </p>

    <div data-hero-target="cta" class="flex flex-col items-center gap-4">
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="#village" class="btn-neon-solid">Voir mes projets</a>
        <a href="#contact" class="btn-neon btn-neon-fill">Me contacter</a>
      </div>
      <a href="#about" class="text-gray-400 hover:text-neon-400 transition-colors text-sm flex items-center gap-2">
        <i class="fa-solid fa-user"></i> À propos
      </a>
    </div>
  </div>

  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-dark-950 to-transparent"></div>
</section>
