<%# locals: (number:, title:, description:, tags:, url:) %>
<a href="<%= url %>" target="_blank" rel="noopener noreferrer" class="glass-card border-neon p-5 md:p-8 group cursor-pointer block" aria-label="Voir le projet <%= title %> sur GitHub">
  <div class="flex items-start justify-between mb-3 md:mb-4">
    <span class="text-neon-500 text-2xl md:text-3xl font-mono"><%= number %></span>
    <i class="fa-brands fa-github text-lg text-gray-400 group-hover:text-neon-400 transition-colors" aria-hidden="true"></i>
  </div>
  <h3 class="text-xl md:text-2xl font-semibold text-white mb-2 group-hover:text-neon-400 transition-colors">
    <%= title %>
  </h3>
  <p class="text-gray-300 text-xs md:text-sm leading-relaxed mb-3 md:mb-4">
    <%= description %>
  </p>
  <div class="flex gap-2">
    <% tags.each do |tag| %>
      <span class="text-xs bg-dark-700 text-gray-300 px-2 py-1 rounded"><%= tag %></span>
    <% end %>
  </div>
</a>
