<%# locals: (title: nil, url: nil, show_external: false) %>
<div class="flex items-center gap-3 px-4 py-3 bg-dark-800 border-b border-dark-700">
  <div class="flex gap-2">
    <span class="w-3 h-3 rounded-full bg-red-500/80"></span>
    <span class="w-3 h-3 rounded-full bg-yellow-500/80"></span>
    <span class="w-3 h-3 rounded-full bg-green-500/80"></span>
  </div>
  <div class="flex-1 flex items-center justify-center">
    <% if url %>
      <div class="bg-dark-700 rounded-lg px-4 py-1.5 flex items-center gap-2 max-w-md w-full">
        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
        <span class="text-gray-400 text-sm truncate"><%= url %></span>
      </div>
    <% elsif title %>
      <span class="text-gray-400 text-sm"><%= title %></span>
    <% end %>
  </div>
  <% if show_external %>
    <span class="text-gray-400 group-hover:text-neon-400 transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
      </svg>
    </span>
  <% end %>
</div>
