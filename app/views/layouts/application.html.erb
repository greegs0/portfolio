    <!-- Open Graph -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://gregory-lefebvre.dev/">
    <meta property="og:title" content="Grégory Lefebvre | Développeur Full-Stack Ruby on Rails">
    <meta property="og:description" content="Développeur Full-Stack Ruby on Rails basé à Strasbourg. Création d'applications web modernes avec Ruby on Rails, HTML/CSS/JS, PostgreSQL et intégration IA.">
